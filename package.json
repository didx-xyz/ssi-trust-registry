{
  "name": "ssi-trust-registry",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "format:update": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint . --ignore-path .gitignore",
    "types:check": "tsc --noEmit",
    "validate": "yarn format:check && yarn lint && yarn types:check",
    "test": "jest",
    "test:watch": "yarn test --watchAll",
    "postinstall": "node -e \"process.env.NODE_ENV !== 'production' && require('husky').install()\"",
    "dev": "ts-node-dev --respawn --transpile-only ./src/main.ts",
    "start": "rm -rf build && yarn build && node ./build/main.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "swagger-ui-express": "^4.6.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "yaml": "^2.3.1"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^5.2.0",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node-fetch": "^2.6.4",
    "@types/uuid": "^9.0.2",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.7",
    "typescript": "^5.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "zod": "^3.21.4"
  }
}
